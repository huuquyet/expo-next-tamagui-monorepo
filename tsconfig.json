{
  "compilerOptions": {
    "module": "esnext",
    "forceConsistentCasingInFileNames": true,
    "noUncheckedIndexedAccess": true,
    "paths": {
      "app/*": ["./packages/app/*"],
      "@my/config/*": ["./packages/config/*"],
      "@my/ui/*": ["./packages/ui/*"]
    },
    "strict": true,
    "strictNullChecks": true
  },
  "extends": "./tsconfig.base",
  "exclude": [
    "**/node_modules",
    "**/dist",
    "**/types",
    "apps/next/.next",
    "apps/next/.tamagui",
    "apps/next/out"
  ]
}
