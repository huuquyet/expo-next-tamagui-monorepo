{
  "name": "expo-next-tamagui-monorepo",
  "version": "0.3.1",
  "private": true,
  "workspaces": ["./apps/*", "./packages/*"],
  "scripts": {
    "android": "bun --filter 'expo*' android",
    "build:pkg": "bun --filter '*/ui' build",
    "check": "bun --filter 'expo*' check",
    "clean": "git clean -xdf",
    "doctor": "bun --filter 'expo*' doctor",
    "ios": "bun --filter 'expo*' ios",
    "lint": "bunx @biomejs/biome check --write .",
    "native": "bun --filter 'expo*' start",
    "postinstall": "bun build:pkg",
    "watch": "bun --filter '*/ui' watch",
    "web": "bun build:pkg && bun --filter 'next*' dev",
    "web:extract": "DISABLE_EXTRACTION=false bun --fitler 'next*' dev",
    "web:prod": "bun build:pkg && bun --filter 'next*' build",
    "web:prod:serve": "bun --filter 'next*' serve"
  },
  "dependencies": {
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-native": "0.74.2",
    "react-native-web": "^0.19.12"
  },
  "devDependencies": {
    "@babel/types": "^7.24.7",
    "@tamagui/constants": "latest",
    "@types/bun": "^1.1.3",
    "@types/react": "~18.2.79",
    "@types/react-native": "^0.73.0",
    "typescript": "~5.3.3"
  }
}
